VITE_WS_URL=ws://localhost:5000
VITE_SOCKET_PATH=/socket.io

# Application Settings
# -------------------
VITE_APP_NAME=Inventra
VITE_APP_VERSION=1.0.0

# Environment
# -----------
VITE_ENV=development
