{
  "name": "inventra-monorepo",
  "version": "1.0.0",
  "description": "Inventra - Microservices Inventory Management System",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:services\"",
    "dev:web": "cd apps/web && npm run dev",
    "dev:services": "docker-compose -f infrastructure/docker/docker-compose.yml up -d",
    "build": "npm run build:packages && npm run build:apps && npm run build:services",
    "build:packages": "npm run build --workspaces --if-present packages/*",
    "build:apps": "npm run build --workspaces --if-present apps/*",
    "build:services": "npm run build --workspaces --if-present services/*",
    "test": "npm run test --workspaces --if-present",
    "test:e2e": "cd testing/e2e && npm test",
    "lint": "npm run lint --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "install:all": "npm install && npm install --workspaces",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "migrate:dev": "cd infrastructure/databases && npm run migrate:dev",
    "migrate:prod": "cd infrastructure/databases && npm run migrate:prod",
    "docker:build": "docker-compose -f infrastructure/docker/docker-compose.yml build",
    "docker:up": "docker-compose -f infrastructure/docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infrastructure/docker/docker-compose.yml down",
    "k8s:deploy": "kubectl apply -k infrastructure/kubernetes/overlays/development",
    "terraform:plan": "cd infrastructure/terraform/environments/development && terraform plan",
    "terraform:apply": "cd infrastructure/terraform/environments/development && terraform apply"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "inventory",
    "management",
    "microservices",
    "react",
    "typescript",
    "nodejs"
  ],
  "author": "Inventra Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/arnesssr/Inventra.git"
  }
}